@model CutItUp.Data.Data.Tools.Drill

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="edit-form-wrapper">
        <h3 class="form-title">Edytuj Wiertło</h3>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
           
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Angle" class="form-label"></label>
                    <input asp-for="Angle" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Material" class="form-label"></label>
                    <input asp-for="Material" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Dimension" class="form-label"></label>
                    <input asp-for="Dimension" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Length" class="form-label"></label>
                    <input asp-for="Length" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfToolsInMagazine" class="form-label"></label>
                    <input asp-for="NoOfToolsInMagazine" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfSaled" class="form-label"></label>
                    <input asp-for="NoOfSaled" class="form-control" />
                </div>
            </div>

            <div class="mb-4">
                <label for="ImageFile" class="form-label">Zdjęcie narzędzia</label>
                <input type="file" name="ImageFile" class="form-control" />

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <strong>Obecne zdjęcie:</strong><br />
                        <img src="@Model.ImageUrl" class="img-thumbnail mt-1 shadow" style="max-height: 150px;" />
                    </div>
                }
            </div>

            <div class="d-flex justify-content-center gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-action="Index" asp-controller="Tool" class="btn btn-outline-secondary">← Wróć do listy</a>
            </div>
        </form>
    </div>
</div>
