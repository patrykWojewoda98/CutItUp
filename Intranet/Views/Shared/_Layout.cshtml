<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intranet</title>
    @model Intranet.Models.MessageModel;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/logo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intranet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aiStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src=@("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")></script>
</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary fixed-top">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo po lewej -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" class="logo me-2" alt="Logo" />
                </a>

                <!-- Prawa część: hamburger + profil -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Profil użytkownika -->
                    <div class="profile d-flex align-items-center">
                        <h5 class="mb-0 me-2 d-none d-md-block">Patryk Wojewoda</h5>
                        <img src="~/images/Logo.png" class="profile-pic" alt="Profil" />
                    </div>

                    <!-- Hamburger -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Offcanvas menu -->
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Witaj Patryk Wojewoda</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-person-circle">Profil</i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-gear-fill">Ustawienia</i>
                                </a>
                            </li>
                        </ul>
                        <button type="button" class="btn btn-danger">Wyloguj</button>
                    </div>
                </div>
            </div>
        </nav>


    </header>

    <div class="container-fluid main-content main-content">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-1 bg-light sidebar pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"> Strona głowna</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-plus-circle-fill"> Dodaj nowy</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-box-seam-fill"> Magazyn</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-bag-plus-fill"> Zamów</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-exclamation-diamond-fill"> Braki</i></a>
                    </li>
                </ul>
            </nav>

            <main class="col-6 col-xl-9 pt-3">
                @RenderBody()
            </main>

            <div class="col-5 col-xl-2 pt-3">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 text-center">
                        <h3 class="aiFont">Chat GPT</h3>
                        <div class="messages">
                            @foreach (var message in MessageModel.messages)
                            {
                                if (message.IsUsersMessage)
                                {
                                    <div class="question">@message.Message</div>
                                }
                                else
                                {
                                    <div class="response">@message.Message</div>
                                }
                            }
                        </div>
                        <div class="textMessage">
                            <form method="post" asp-action="SendMessage" asp-controller="Layout">
                                <input asp-for="Message" class="form-control" placeholder="Wpisz wiadomość" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-primary">Wyślij</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-1">
                        @if (TempData["Response"] != null)
                        {
                            var responseMessage = TempData["Response"].ToString();
                            if (responseMessage == "Error")
                            {
                                <div class="alert alert-danger mt-3">
                                    <strong>Wystąpił błąd podczas przetwarzania wiadomości.</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success mt-3">
                                    <strong>Odpowiedź z ChatGPT:</strong>
                                    <p>@responseMessage</p>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
