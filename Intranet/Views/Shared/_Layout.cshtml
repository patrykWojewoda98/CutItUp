<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intranet</title>
    @model Intranet.Models.MessageModel;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/logo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intranet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aiStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <script src=@("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")></script>
</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" class="logo" alt="Logo" />
                </a>

                <form class="d-flex mt-3" role="form">
                    <i class="bi bi-key-fill mt-2 me-2"></i>
                    <input class="form-control me-2" type="text" placeholder="Nazwa użytkownika" aria-label="Login">
                    <input class="form-control me-2" type="password" placeholder="Hasło" aria-label="Hasło">
                    <button class="btn btn-secondary" type="submit">Zaloguj</button>
                </form>
            </div>

        </nav>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" class="logo" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Dodaj nowy</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Magazyn</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Do zamówienia</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>

    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-1 bg-light sidebar pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"> Strona głowna</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-plus-circle-fill"> Dodaj nowy</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-box-seam-fill"> Magazyn</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-bag-plus-fill"> Zamów</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy"><i class="bi bi-exclamation-diamond-fill"> Braki</i></a>
                    </li>
                </ul>
            </nav>

            <main class="col-9 pt-3">
                @RenderBody()
            </main>

            <div class="col-2 pt-3">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <div class="messages">
                            @foreach (var message in MessageModel.messages)
                            {
                                if (message.IsUsersMessage)
                                {
                                    <div class="question">@message.Message</div>
                                }
                                else
                                {
                                    <div class="response">@message.Message</div>
                                }
                            }
                        </div>
                        <div class="textMessage">
                            <form method="post" asp-action="SendMessage" asp-controller="Layout">
                                <input asp-for="Message" class="form-control" placeholder="Wpisz wiadomość" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-primary">Wyślij</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-1">
                        @if (TempData["Response"] != null)
                        {
                            var responseMessage = TempData["Response"].ToString();
                            if (responseMessage == "Error")
                            {
                                <div class="alert alert-danger mt-3">
                                    <strong>Wystąpił błąd podczas przetwarzania wiadomości.</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success mt-3">
                                    <strong>Odpowiedź z ChatGPT:</strong>
                                    <p>@responseMessage</p>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Intranet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
