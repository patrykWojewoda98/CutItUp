@model CutItUp.Data.Data.Tools.Tap

@{
    ViewData["Title"] = "Dodaj gwintownik";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="edit-form-wrapper p-4">
        <h3 class="text-center mb-4 fw-bold">Dodaj Gwintownik</h3>

        <form asp-action="Create" asp-controller="Tap" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Nazwa" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <input asp-for="Material" class="form-control" placeholder="Materiał" />
                    <span asp-validation-for="Material" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <textarea asp-for="Description" class="form-control textarea-style" placeholder="Opis" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="PassThrough" class="form-check-input" id="passThroughCheckbox" />
                <label class="form-check-label" for="passThroughCheckbox">Czy przelotowy?</label>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <input asp-for="Price" class="form-control" placeholder="Cena" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <input asp-for="Dimension" class="form-control" placeholder="Wymiar" />
                    <span asp-validation-for="Dimension" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <input asp-for="Length" class="form-control" placeholder="Długość narzędzia" />
                    <span asp-validation-for="Length" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <input asp-for="NoOfToolsInMagazine" class="form-control" placeholder="Ilość sztuk w magazynie" />
                    <span asp-validation-for="NoOfToolsInMagazine" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <input asp-for="NoOfSaled" class="form-control" placeholder="Ilość sprzedanych" />
                    <span asp-validation-for="NoOfSaled" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label for="ImageFile" class="form-label">Zdjęcie narzędzia</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">Zapisz</button>
                <a asp-action="Index" asp-controller="Tool" class="btn btn-outline-secondary">← Wróć do listy</a>
            </div>
        </form>
    </div>
</div>
