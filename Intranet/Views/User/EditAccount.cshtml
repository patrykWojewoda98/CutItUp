@model Intranet.Models.UserModel

@{
    ViewData["Title"] = "Edytuj moje konto";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="edit-form-wrapper p-4">
        <h3 class="text-center mb-4 fw-bold">Edytuj moje konto</h3>

        <form asp-action="EditAccount" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Imię" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <input asp-for="Surname" class="form-control" placeholder="Nazwisko" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="Login" class="form-control" placeholder="Login" />
                <span asp-validation-for="Login" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" class="form-control" placeholder="Nowe hasło (opcjonalnie)" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <input type="hidden" asp-for="Position" />

            <div class="mb-3">
                <input asp-for="Salary" class="form-control" placeholder="Wynagrodzenie (PLN)" />
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ImageFile" class="form-label">Zdjęcie użytkownika</label>
                <input asp-for="ImageFile" class="form-control" />

                @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                {
                    <div class="mt-2">
                        <strong>Obecne zdjęcie:</strong><br />
                        <img src="@Model.ExistingImageUrl" class="img-thumbnail mt-1 shadow" style="max-height: 150px;" />
                    </div>
                }
            </div>

            <div class="d-flex justify-content-center gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-action="Index" class="btn btn-outline-secondary">← Wróć do listy</a>
            </div>
        </form>
    </div>
</div>
