@{
    var isLogged = Context.Session.GetString("User") != null;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="login-page">
    

    
    @if (!isLogged)
    {
        <div class="login-wrapper">
            <div class="container d-flex justify-content-center align-items-center">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h3>Zaloguj się</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" asp-controller="User" method="post">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" name="Username" placeholder="Nazwa użytkownika" required>
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" name="Password" placeholder="Hasło" required>
                                </div>
                                <div class="row align-items-center remember">
                                    <input type="checkbox"> Zapamiętaj mnie
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Zaloguj" class="btn float-right login_btn">
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                Zapomniałeś hasła?<a href="#"> Przypomnij hasło</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
