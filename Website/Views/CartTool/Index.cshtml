@model IEnumerable<Website.Models.Cart.CartItemViewModel>
<head>
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
</head>

<div class="container mt-5">
    <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-lg-8">
            <h3>Twój koszyk</h3>
            @{
                foreach(var item in Model)
                {
                    <div class="cart-item d-flex justify-content-between">
                        <div class="d-flex">
                            <img src="@item.ImageUrl" alt="Narzędzie" class="product-img me-3">
                            <div>
                                <h5>@item.Name</h5>
                                <input type="number" class="form-control w-25" value="@item.Quantity">
                            </div>
                        </div>
                        <div class="d-flex flex-column justify-content-between">
                            <span>@item.Total zł</span>
                            <button class="btn btn-sm btn-danger">Remove</button>
                        </div>
                    </div>
                }

            }
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <div class="cart-summary">
                <h4>Podsumowanie</h4>
                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>$45.98</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span>Shipping:</span>
                        <span>$5.00</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span class="total-price">Total:</span>
                        <span class="total-price">@ViewBag.TotalAmount</span>
                    </li>
                </ul>
                <button class="btn btn-checkout w-100">Proceed to Checkout</button>
            </div>
        </div>
    </div>
</div>