@{
    ViewData["Title"] = "Strona Głowna";
}
@section Styles {
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-xl-3">
            <div class="text-container">
                <h2 id="mainTitle" class="mb-4">Gwintowniki Yamawa – precyzja, na której możesz polegać</h2>
                <h4 id="subTitle">Gwintowniki Yamawa to synonim niezawodności i najwyższej jakości w obróbce gwintów. Japońska precyzja, trwałość narzędzi oraz szeroka gama modeli sprawiają, że Yamawa od lat cieszy się zaufaniem specjalistów na całym świecie. Niezależnie od tego, czy potrzebujesz gwintowania ręcznego, maszynowego czy bezwiórowego – Yamawa dostarcza rozwiązania dopasowane do najbardziej wymagających zastosowań.'</h4>
            </div>
            <div class="nav-buttons">
                <input type="radio" class="btn-check" name="views" id="option1" autocomplete="off" checked onclick="changeView(1)">
                <label class="btn" for="option1">1</label>

                <input type="radio" class="btn-check" name="views" id="option2" autocomplete="off" onclick="changeView(2)">
                <label class="btn" for="option2">2</label>

                <input type="radio" class="btn-check" name="views" id="option3" autocomplete="off" onclick="changeView(3)">
                <label class="btn" for="option3">3</label>

            </div>
        </div>
        <div class="col-12 col-xl-9 video-container">
            <video autoplay muted loop playsinline id="bg-video">
                <source src="./Video/TapsVideo.mp4" type="video/mp4">
            </video>
        </div>
    </div>
    <div class="col-12">
        <div class="text-center">
            <h1>Nasze Hity Sprzedarzowe</h1>
            <h1><i class="bi bi-award"></i></h1>
        </div>
        <div id="carouselExampleCaptions" class="carousel slide carusel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/Logo.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>First slide label</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/background.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/Logo.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Third slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1>Dlaczego właśnie my?</h1>
            </div>
            <div class="text-container">
            <h2><i class="bi bi-check-square-fill"></i> Terminowość</h2>
            <h2><i class="bi bi-check-square-fill"></i> Konkurencyjne ceny</h2>
                <h2><i class="bi bi-check-square-fill"></i> Dostępność narzędzi katalogowych w 24h</h2>
            <h2><i class="bi bi-check-square-fill"></i> Darmowa dostawa przy zakupie za minimum 1000zł na terenie całej polski</h2>
        </div>
    </div>
    <div class="row">
            <div class="col">
                <div class="text-center">
                    <h1>Gdzie nas znajdziesz?</h1>
                </div>
                <div class="container-fluid ">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2585.863189637719!2d20.68684797678988!3d49.6003293482084!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473de527c4c967d1%3A0x4656f90ca24683d9!2sWy%C5%BCsza%20Szko%C5%82a%20Biznesu%20-%20National%20Louis%20University!5e0!3m2!1spl!2spl!4v1743766120896!5m2!1spl!2spl" width="1000" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
    </div>
</div>





<script>
    function changeView(option) {
      const title = document.getElementById('mainTitle');
      const subtitle = document.getElementById('subTitle');
      const video = document.getElementById('bg-video');
      const source = video.querySelector('source');

      if (option === 1) {
        title.textContent = 'Gwintowniki Yamawa – precyzja, na której możesz polegać';
        subtitle.textContent = 'Gwintowniki Yamawa to synonim niezawodności i najwyższej jakości w obróbce gwintów. Japońska precyzja, trwałość narzędzi oraz szeroka gama modeli sprawiają, że Yamawa od lat cieszy się zaufaniem specjalistów na całym świecie. Niezależnie od tego, czy potrzebujesz gwintowania ręcznego, maszynowego czy bezwiórowego – Yamawa dostarcza rozwiązania dopasowane do najbardziej wymagających zastosowań.';
        source.src = './Video/TapsVideo.mp4';
      } else if (option === 2) {
        title.textContent = 'Wiertła Hilti – moc, która przebija oczekiwania';
        subtitle.textContent = 'Wiertła Hilti to połączenie niezrównanej trwałości, precyzji i siły, które sprawdza się nawet w najtrudniejszych warunkach. Dzięki zaawansowanej technologii i solidnej konstrukcji, narzędzia Hilti umożliwiają szybkie i skuteczne wiercenie w betonie, stali oraz innych wymagających materiałach. To wybór profesjonalistów, którzy nie uznają kompromisów – zarówno na budowie, jak i w warsztacie.';
        source.src = './Video/DrillsVideo.mp4';
      } else if (option === 3) {
        title.textContent = 'Frezy CERATIZIT – perfekcja w każdym skrawaniu';
        subtitle.textContent = 'Frezy CERATIZIT Group to nowoczesne narzędzia skrawające stworzone z myślą o maksymalnej wydajności, precyzji i trwałości. Dzięki innowacyjnym rozwiązaniom technologicznym i wysokiej jakości węglikom spiekanym, frezy te doskonale radzą sobie nawet z najbardziej wymagającymi materiałami. Niezależnie od tego, czy pracujesz w lotnictwie, motoryzacji czy produkcji narzędzi – CERATIZIT zapewnia niezawodność, której możesz zaufać.';
        source.src = './Video/MillVideo.mp4';
      }
        video.load();
        video.play();
    }
</script>
