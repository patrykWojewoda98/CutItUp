@model IEnumerable<CutItUp.Data.Data.Tools.SpecialTool>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="@Url.Content("~/css/toolCard.css")" />
</head>

<div class="tool-cards-wrapper">
    @foreach (var item in Model)
    {
        <div class="cardContainer">
            <div class="myCard">
                <div class="front">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" class="tool-image" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Images/default.png")" alt="Default Image" class="tool-image" />
                    }
                    <h2>@item.Name</h2>
                    <p><strong>Cena:</strong> @item.Price zł</p>
                </div>
                <div class="back">
                    <h3>@item.Description</h3>
                    <p><strong>Cena:</strong> @item.Price zł</p>
                    <p><strong>Materiał:</strong> @item.Material</p>
                    <p><strong>Wymiar:</strong> @item.Dimension mm</p>
                    <p><strong>Ilość krawędzi tnących:</strong> @item.NoCuttingEddges</p>

                    @if (item.Angle.HasValue)
                    {
                        <p><strong>Kąt:</strong> @item.Angle°</p>
                    }

                    @if (item.Radius.HasValue)
                    {
                        <p><strong>Promień:</strong> @item.Radius mm</p>
                    }

                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-top: 0.5rem;">
                            <input type="number" name="amount" value="1" min="1" max="100" step="1" />
                            <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
